{
  "info": {
    "name": "PROGIII API Collection",
    "_postman_id": "progiii-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"nombre_usuario\": \"admin@correo.com\", \"contrasenia\": \"admin123\"}"
        }
      }
    },
    {
      "name": "Listar Salones",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/salones",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "salones"
          ]
        }
      }
    },
    {
      "name": "Crear Reserva (cliente)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reservas",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservas"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"fecha_reserva\": \"2025-12-20\", \"salon_id\": 1, \"usuario_id\": 3, \"turno_id\": 1, \"servicios\": [{\"servicio_id\": 1}, {\"servicio_id\": 2}], \"tematica\": \"Infantil\"}"
        }
      }
    },
    {
      "name": "Export Reservations CSV",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/reservas.csv",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reports",
            "reservas.csv"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
